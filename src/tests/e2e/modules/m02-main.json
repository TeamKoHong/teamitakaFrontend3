{
  "module_id": "M02",
  "module_name": "메인 화면",
  "features": [
    {
      "feature_id": "M02-F01",
      "feature_name": "메인 홈",
      "route": "/main",
      "test_scenarios": [
        {
          "id": "M02-F01-01",
          "description": "사용자명과 인사말이 표시되는가?",
          "user_state": "US04",
          "priority": "critical",
          "steps": [
            { "action": "navigate", "target": "/main" },
            { "action": "wait", "selector": ".main-page", "timeout": 5000 },
            { "action": "screenshot", "name": "main-home" }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".name" },
            { "type": "text_matches", "selector": ".name", "pattern": "님$" }
          ],
          "expected_result": "'사용자명 {username}님' 형식으로 표시"
        },
        {
          "id": "M02-F01-02",
          "description": "대학교, 학과명, 재학 상태가 표시되는가?",
          "user_state": "US04",
          "priority": "high",
          "steps": [
            { "action": "navigate", "target": "/main" }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".school" },
            { "type": "text_not_empty", "selector": ".school" }
          ],
          "expected_result": "'대학교 학과명 재학 중' 또는 '학과 정보가 없습니다' 표시"
        },
        {
          "id": "M02-F01-03",
          "description": "현재 진행중인 프로젝트 건수가 표시되는가?",
          "user_state": "US04",
          "priority": "high",
          "steps": [
            { "action": "navigate", "target": "/main" }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".stats" },
            { "type": "text_matches", "selector": ".stats", "pattern": "총.+건" }
          ],
          "expected_result": "'현재 진행중인 프로젝트 총 N건' 표시"
        },
        {
          "id": "M02-F01-04",
          "description": "팀플 경험 횟수가 표시되는가?",
          "user_state": "US04",
          "priority": "high",
          "steps": [
            { "action": "navigate", "target": "/main" }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".stats" },
            { "type": "text_matches", "selector": ".stats", "pattern": "팀플 경험.+회" }
          ],
          "expected_result": "'팀플 경험 N회' 표시"
        },
        {
          "id": "M02-F01-05",
          "description": "프로필 키워드가 표시되는가?",
          "user_state": "US04",
          "priority": "medium",
          "steps": [
            { "action": "navigate", "target": "/main" }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".tags" },
            { "type": "count_greater_than", "selector": ".tag", "min": 0 }
          ],
          "expected_result": "키워드 태그 표시 (설정된 경우)"
        },
        {
          "id": "M02-F01-06",
          "description": "알림 아이콘 클릭 시 알림 페이지로 이동하는가?",
          "user_state": "US04",
          "priority": "high",
          "steps": [
            { "action": "navigate", "target": "/main" },
            { "action": "click", "selector": ".icon-btn[aria-label='알림'], .alarm-icon" },
            { "action": "wait_for_navigation", "timeout": 3000 }
          ],
          "validations": [
            { "type": "url_contains", "expected": "/notifications" }
          ],
          "expected_result": "알림 페이지로 이동"
        }
      ]
    },
    {
      "feature_id": "M02-F02",
      "feature_name": "내가 참여 중인 프로젝트",
      "route": "/main",
      "test_scenarios": [
        {
          "id": "M02-F02-01",
          "description": "프로젝트 섹션이 표시되는가?",
          "user_state": "US04",
          "priority": "critical",
          "steps": [
            { "action": "navigate", "target": "/main" },
            { "action": "wait", "selector": ".my-projects", "timeout": 5000 }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".section-title" },
            { "type": "text_contains", "selector": ".section-title", "expected": "참여 중인 프로젝트" }
          ],
          "expected_result": "'내가 참여 중인 프로젝트' 섹션 제목 표시"
        },
        {
          "id": "M02-F02-02",
          "description": "프로젝트가 없을 때 빈 상태 UI가 표시되는가?",
          "user_state": "US04",
          "priority": "high",
          "steps": [
            { "action": "navigate", "target": "/main" },
            { "action": "wait", "selector": ".my-projects", "timeout": 5000 }
          ],
          "validations": [
            { "type": "any_text_visible", "selector": ".empty-card, .project-list, .loading-state, .error-state" }
          ],
          "expected_result": "빈 카드 또는 프로젝트 목록 또는 로딩/에러 상태 표시"
        },
        {
          "id": "M02-F02-03",
          "description": "빈 상태에서 '팀 프로젝트 시작하기' 버튼이 동작하는가?",
          "user_state": "US04",
          "priority": "high",
          "precondition": "프로젝트가 없는 상태",
          "steps": [
            { "action": "navigate", "target": "/main" },
            { "action": "wait", "selector": ".my-projects", "timeout": 5000 },
            { "action": "click", "selector": ".primary-btn", "optional": true },
            { "action": "wait_for_navigation", "timeout": 3000 }
          ],
          "validations": [
            { "type": "url_contains", "expected": "/recruit" }
          ],
          "expected_result": "모집글 작성 페이지로 이동"
        }
      ]
    },
    {
      "feature_id": "M02-F03",
      "feature_name": "하단 네비게이션",
      "route": "/main",
      "test_scenarios": [
        {
          "id": "M02-F03-01",
          "description": "하단 네비게이션이 존재하는가?",
          "user_state": "US04",
          "priority": "critical",
          "steps": [
            { "action": "navigate", "target": "/main" }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".bottom-nav, nav[class*='bottom']" }
          ],
          "expected_result": "하단 네비게이션 바 표시"
        },
        {
          "id": "M02-F03-02",
          "description": "'프로젝트' 탭 클릭 시 프로젝트 관리 페이지로 이동하는가?",
          "user_state": "US04",
          "priority": "critical",
          "steps": [
            { "action": "navigate", "target": "/main" },
            { "action": "click", "selector": ".bottom-nav .nav-item:nth-child(2), a[href*='project']" },
            { "action": "wait_for_navigation", "timeout": 3000 }
          ],
          "validations": [
            { "type": "url_contains", "expected": "/project" }
          ],
          "expected_result": "프로젝트 관리 화면으로 이동"
        },
        {
          "id": "M02-F03-03",
          "description": "'팀매칭' 탭 클릭 시 팀매칭 페이지로 이동하는가?",
          "user_state": "US04",
          "priority": "critical",
          "steps": [
            { "action": "navigate", "target": "/main" },
            { "action": "click", "selector": ".bottom-nav .nav-item:nth-child(3), a[href*='team'], a[href*='matching']" },
            { "action": "wait_for_navigation", "timeout": 3000 }
          ],
          "validations": [
            { "type": "url_contains", "expected": "/team" }
          ],
          "expected_result": "팀매칭 화면으로 이동"
        },
        {
          "id": "M02-F03-04",
          "description": "'프로필' 탭 클릭 시 프로필 페이지로 이동하는가?",
          "user_state": "US04",
          "priority": "critical",
          "steps": [
            { "action": "navigate", "target": "/main" },
            { "action": "click", "selector": ".bottom-nav .nav-item:nth-child(4), a[href*='profile']" },
            { "action": "wait_for_navigation", "timeout": 3000 }
          ],
          "validations": [
            { "type": "url_contains", "expected": "/profile" }
          ],
          "expected_result": "프로필 화면으로 이동"
        }
      ]
    }
  ]
}
