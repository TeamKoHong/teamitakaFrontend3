      "route": "/team-matching",
      "test_scenarios": [
        {
          "id": "M05-F01-01",
          "description": "검색 기능이 동작하는가?",
          "user_state": "US04",
          "priority": "critical",
          "steps": [
            { "action": "navigate", "target": "/search" },
            { "action": "wait", "selector": ".search-page, main", "timeout": 5000 },
            { "action": "type", "selector": ".search-input, input", "value": "마케팅" },
            { "action": "click", "selector": ".search-btn, button" },
            { "action": "screenshot", "name": "search-results" }
          ],
          "validations": [
            { "type": "element_visible", "selector": "main, h2, .search-page" }
          ],
          "expected_result": "검색어 입력 및 결과 표시"
        },
        {
          "id": "M05-F01-02",
          "description": "최근 검색어가 표시되는가?",
          "user_state": "US04",
          "priority": "medium",
          "steps": [
            { "action": "navigate", "target": "/search" },
            { "action": "wait", "selector": ".search-page", "timeout": 5000 }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".tag-list, .search-box" }
          ],
          "expected_result": "검색 기록 표시"
        },
        {
          "id": "M05-F01-03",
          "description": "인기 검색어가 표시되는가?",
          "user_state": "US04",
          "priority": "medium",
          "steps": [
            { "action": "navigate", "target": "/search" },
            { "action": "wait", "selector": ".search-page", "timeout": 5000 }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".popular-section, .popular-tags" }
          ],
          "expected_result": "인기 키워드 목록"
        },
        {
          "id": "M05-F01-04",
          "description": "'홍익대 HOT 교내 공고' 등 학교별 인기 공고가 표시되는가?",
          "user_state": "US04",
          "priority": "high",
          "steps": [
            { "action": "navigate", "target": "/team-matching" },
            { "action": "wait", "selector": ".team-matching-app", "timeout": 5000 }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".hot-topic-card, .section" }
          ],
          "expected_result": "학교별 인기 모집글"
        },
        {
          "id": "M05-F01-05",
          "description": "키워드별 모집이 표시되는가?",
          "user_state": "US04",
          "priority": "high",
          "steps": [
            { "action": "navigate", "target": "/team-matching" },
            { "action": "wait", "selector": ".team-matching-app", "timeout": 5000 }
          ],
          "validations": [
            { "type": "element_visible", "selector": ".filter-tags, .matching-list" },
            { "type": "element_count", "selector": ".filter-tag, .matching-card", "expected_min": 1 }
          ],
          "expected_result": "마케팅, 디자인, 브랜딩, IT, 서비스개발, 경영 카테고리"
        }
      ]
    },
